# STOCKVEL Frontend Environment Variables Template
# Copy this file to .env.local and set your own values

# ─── API Configuration ──────────────────────────────────────
VITE_API_URL=http://localhost:5000/api

# ─── Paystack Configuration ─────────────────────────────────
# Get this from: https://dashboard.paystack.com/settings/developers/api-keys
#
# Test Public Key (for development):
VITE_PAYSTACK_PUBLIC_KEY=pk_test_your_public_key_here
#
# Live Public Key (for production):
# VITE_PAYSTACK_PUBLIC_KEY=pk_live_your_live_public_key

# ─── Feature Flags ──────────────────────────────────────────
VITE_ENABLE_PAYMENTS=true
VITE_ENABLE_LOANS=true
VITE_ENABLE_NOTIFICATIONS=true

# ─── Logging ────────────────────────────────────────────────
VITE_DEBUG_MODE=true
